[user]
    name             = Prajjwal Bhandari
    email            = pbhandari@pbhandari.ca
[github]
    user             = pbhandari

[apply]
    ignorewhitespace = change
    whitespace       = error

[credential]
    helper           = cache --timeout=3600

[core]
    editor           = vim
    pager            = less
    autocrlf         = input
    filemode         = false
    whitespace       = trailing-space,space-before-tab
    excludesfile     = ~/.vcsignore

[merge]
    log              = true
    tool             = vimdiff

[push]
    default          = upstream

[color]
    ui               = auto
[color "branch"]
    current          = green bold
    local            = blue
    remote           = yellow
[color "decorate"]
    branch           = blue bold
    remoteBranch     = green
    tag              = green bold

[column]
    ui               = auto

[diff]
    renames          = true
    algorithm        = patience
    mnemonicprefix   = true
    tool             = vimdiff

[pager]
    l                = false

[grep]
    lineNumber       = true
    patternType      = perl

[url "git@github.com"]
    insteadOf       = gh

[url "git@bitbucket.org"]
    insteadOf       = bb

[alias]
    l                = log -n20 --pretty=sparselog --date=relative --graph
    ll               = "!git l origin/master..${1:-HEAD}"

    s                = status -sb
    st               = status

    co               = checkout
    br               = branch
    ci               = commit
    sta              = stash

    di               = diff
    ds               = diff --staged

    unstage          = reset HEAD --

    assume           = update-index --assume-unchanged
    unassume         = update-index --no-assume-unchanged
    assumed          = "!git ls-files -v | awk '/^h/ {print $2;}'"

    up               = pull origin


[pretty]
    sparselog        = %C(auto,red)%h%C(auto,reset) -%C(auto)%d %C(auto,reset)%s %C(auto,blue)<%an> %C(auto,reset)%C(auto,cyan)(%ad)%C(auto,reset)

    fulllog          = format:\
                        %nCommit: %Creset%C(auto)%d%Creset %Cred%H\
                        %nAuthor: %aN %C(blue bold)<%ae>%Creset\
                        %nDate  : %C(green)%ad%Creset\
                        %n%w(0,4,4)%+s\
                        %n\
                        %n%-b
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
