[user]
    name             = Prajjwal Bhandari
    email            = pbhandari@pbhandari.ca
[github]
    user             = pbhandari

[apply]
    ignorewhitespace = change
    whitespace       = error

[credential]
    helper           = cache --timeout=3600

[core]
    editor           = vim
    pager            = less
    autocrlf         = input
    filemode         = false
    whitespace       = trailing-space,space-before-tab

[merge]
    log              = true
    tool             = gvimdiff

[push]
    default          = upstream

[color]
	ui               = true
[color "branch"]
    current          = green bold
    local            = blue
    remote           = yellow
[color "decorate"]
    branch           = blue bold
    remoteBranch     = green
    tag              = green bold

[column]
    ui               = auto

[diff]
    renames          = true
    algorithm        = patience

[pager]
    l                = false

[grep]
    lineNumber       = true
    patternType      = perl

[url "git@bitbucket.org"]
    insteadOf       = bb

[alias]
    l                = log -n20 --pretty=sparselog --date=relative --graph

    s                = status -sb
    st               = status

    co               = checkout
    br               = branch
    ci               = commit
    sta              = stash

    di               = diff
    ds               = diff --staged

    unstage          = reset HEAD --

    assume           = update-index --assume-unchanged
    unassume         = update-index --no-assume-unchanged
    assumed          = "!git ls-files -v | awk '/^h/ {print $2;}'"

    up               = pull origin


[pretty]
    sparselog        = %C(red)%h%C(reset) -%C(auto)%d %C(reset)%s %C(blue)<%an> %C(reset)%C(cyan)(%ad)%C(reset)

    full-log          = format:\
                        %nCommit: %Cred%h%Creset%C(auto)%d%Creset (%H)\
                        %nAuthor: %cN %C(blue bold)<%ce>%Creset\
                        %nDate  : %C(green)%cd%Creset\
                        %n%w(0,4,4)%+s%n%n%-b

    fulllog          = format:\
                        %nCommit: %Cred%h%Creset%C(auto)%d%Creset (%H)\
                        %nAuthor: %aN %C(blue bold)<%ae>%Creset\
                        %nDate  : %C(green)%ad%Creset\
                        %n%w(0,4,4)%+s%n%n%-b
