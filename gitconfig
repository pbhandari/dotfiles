[user]
    name = Prajjwal Bhandari
    email = pbhandari@pbhandari.ca
[github]
    user = pbhandari
[apply]
    ignorewhitespace = change
    whitespace = error
[credential]
    helper = cache --timeout=3600
[core]
    editor = vim
    autocrlf = input
    filemode = false
    whitespace = trailing-space,space-before-tab
[merge]
    log = true
	tool = gvimdiff
[push]
    default = matching
[color]
	ui = true
[color "branch"]
    current = green bold
    local = blue
    remote = yellow
[column]
    ui = auto
[diff]
    renames = true
    algorithm = patience
[format]
    pretty = oneline
[grep]
    lineNumber = true
    patternType = perl
[alias]
    l   = "!git --no-pager log --pretty=oneline --graph --abbrev-commit -n20"
    up  = pull origin
    st  = status -s
    di  = diff
    co  = checkout
    ci  = commit
    br  = branch
    sta = stash
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
