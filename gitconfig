[user]
    name = Prajjwal Bhandari
    email = pbhandari@pbhandari.ca
[github]
    user = pbhandari
[apply]
    ignorewhitespace = change
    whitespace = error
[credential]
    helper = cache --timeout=3600
[core]
    editor = vim
    autocrlf = input
    filemode = false
    whitespace = trailing-space,space-before-tab
[merge]
    log = true
	tool = gvimdiff
[push]
	default = upstream
[color]
	ui = true
[color "branch"]
    current = green bold
    local = blue
    remote = yellow
[color "decorate"]
    branch = blue bold
    remoteBranch = green
    tag = green bold
[column]
    ui = auto
[diff]
    renames = true
    algorithm = patience
[pretty]
    sparselog = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd)%Creset
    prajj = tformat:\
Commit: %Cred%h%Creset%C(yellow)%d%Creset (%H)%n\
Author: %aN %C(blue bold)<%ae>%Creset%n\
Date  : %C(green)%ad%Creset%n\
%n%s%n%n%-b\
%n
[pager]
    l = false
[grep]
    lineNumber = true
    patternType = perl
[alias]
    l        = log -n20 --pretty=sparselog --date=relative
    up       = pull origin
    s        = status -s
    st       = status
    di       = diff
    co       = checkout
    ci       = commit
    br       = branch
    sta      = stash
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
	ds       = diff --staged
